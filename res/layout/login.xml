<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="#bebebe">
	<TextView android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:typeface="sans"
		android:textStyle="bold" android:textColor="#000000" android:text="Login"></TextView>
	<EditText android:layout_width="match_parent" android:text=""
		android:layout_height="wrap_content" android:layout_gravity="top"
		android:maxLength="32" android:id="@+id/login"></EditText>
	<TextView android:layout_width="wrap_content" android:text="Password"
		android:layout_height="wrap_content" android:typeface="sans"
		android:textStyle="bold" android:textColor="#000000"></TextView>
	<EditText android:layout_width="match_parent" android:text=""
		android:layout_height="wrap_content" android:maxLength="256"
		android:gravity="top" android:id="@+id/key"></EditText>
	<Button android:clickable="true" android:layout_width="match_parent"
		android:layout_height="wrap_content" android:textColor="#343434"
		android:id="@+id/butt_login" android:text="Go!"></Button>
</LinearLayout>
